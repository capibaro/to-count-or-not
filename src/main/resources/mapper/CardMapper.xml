<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.comp2024b.tocountornot.dao.CardMapper">
    <parameterMap id="DELETE_CARD_PARAM_MAP" type="com.comp2024b.tocountornot.bean.Card">
        <parameter property="user_id" javaType="long" />
        <parameter property="name" javaType="String" />
    </parameterMap>
    <select id="getCardByUserIdWithName" resultType="com.comp2024b.tocountornot.bean.Card" >
        select *
        from card
        where user_id = #{user_id} and name = #{name};
    </select>
    <select id="getAllCardByUserId" resultType="com.comp2024b.tocountornot.bean.Card" >
        select *
        from card
        where user_id = #{user_id};
    </select>
    <delete id="deleteCardByUserIdWithName" parameterMap="DELETE_CARD_PARAM_MAP">
        delete from card
        where user_id = #{user_id} and name = #{name};
    </delete>
</mapper>